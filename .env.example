# Node IPs (Home Lab Infrastructure)
DEV_IP=192.168.107.172  # skz-dev-lv (Orchestrator Node)
STG_IP=192.168.107.187  # skz-stg-lv (Data Node)

# Ports
POSTGRES_PORT=5432
REDIS_PORT=6379
N8N_PORT=5678
PHOENIX_PORT=6006
QDRANT_PORT=6333
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
TYPESENSE_PORT=8108

# Credentials (DO NOT COMMIT REAL VALUES)
# PostgreSQL (on skz-dev-lv)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me
POSTGRES_DB=mas_memory

# Redis (on skz-dev-lv) 
# REDIS_PASSWORD=  # Uncomment if Redis requires authentication

# Neo4j (on skz-stg-lv)
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_me

# Typesense (on skz-stg-lv)
TYPESENSE_API_KEY=change_me

# Qdrant (on skz-stg-lv)
# QDRANT_API_KEY=  # Uncomment if Qdrant requires authentication

# Grafana (on skz-stg-lv, for monitoring)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change_me

# LLM Provider API Keys (ADR-006: Free-Tier Multi-Provider Strategy)
# Get keys from:
#   • Google Gemini: https://aistudio.google.com/app/apikey
#   • Groq: https://console.groq.com/keys
#   • Mistral AI: https://console.mistral.ai/api-keys/
GOOGLE_API_KEY=your_google_api_key_here
GROQ_API_KEY=your_groq_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# Derived URLs and Connection Strings (for convenience and tests)
# skz-dev-lv (Orchestrator Node)
POSTGRES_HOST=${DEV_IP}
POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DEV_IP}:${POSTGRES_PORT}/${POSTGRES_DB}
REDIS_HOST=${DEV_IP}
REDIS_URL=redis://${DEV_IP}:${REDIS_PORT}
N8N_URL=http://${DEV_IP}:${N8N_PORT}
PHOENIX_URL=http://${DEV_IP}:${PHOENIX_PORT}

# skz-stg-lv (AI Data & Monitoring Node)
QDRANT_HOST=${STG_IP}
QDRANT_PORT=${QDRANT_PORT}
QDRANT_URL=http://${STG_IP}:${QDRANT_PORT}

NEO4J_HOST=${STG_IP}
NEO4J_URI=bolt://${STG_IP}:${NEO4J_BOLT_PORT}
NEO4J_BOLT=bolt://${STG_IP}:${NEO4J_BOLT_PORT}
NEO4J_HTTP=http://${STG_IP}:${NEO4J_HTTP_PORT}

TYPESENSE_HOST=${STG_IP}
TYPESENSE_PORT=${TYPESENSE_PORT}
TYPESENSE_PROTOCOL=http
TYPESENSE_URL=http://${STG_IP}:${TYPESENSE_PORT}

# Monitoring
PROMETHEUS_URL=http://${STG_IP}:9090
GRAFANA_URL=http://${STG_IP}:3000